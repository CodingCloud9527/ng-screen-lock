{
  "name": "ng-screen-lock-app",
  "version": "0.0.0",
  "scripts": {
    "start": "ng serve --port 8080",
    "build": "ng build --prod",
    "build:lib": "ng build lib --prod",
    "build:lib:watch": "ng build lib --watch",
    "link": "cd ./dist/ng-screen-lock && yarn link && cd ../.. && yarn link ng-screen-lock",
    "test": "ng test --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "docs": "ng run ng-screen-lock:prerender:github-page  && rm -rf docs && mv  dist/ng-screen-lock-app/browser docs",
    "prettier:write": "prettier --write --ignore-unknown .",
    "e2e": "ng e2e",
    "dev:ssr": "ng run ng-screen-lock:serve-ssr",
    "serve:ssr": "node dist/ng-screen-lock-app/server/main.js",
    "build:ssr": "ng build --prod && ng run ng-screen-lock:server:production",
    "prerender": "ng run ng-screen-lock:prerender "
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@angular/animations": "~10.0.6",
    "@angular/common": "~10.0.6",
    "@angular/compiler": "~10.0.6",
    "@angular/core": "~10.0.6",
    "@angular/forms": "~10.0.6",
    "@angular/platform-browser": "~10.0.6",
    "@angular/platform-browser-dynamic": "~10.0.6",
    "@angular/platform-server": "~10.0.6",
    "@angular/router": "~10.0.6",
    "@nguniversal/express-engine": "10.0.2",
    "express": "^4.15.2",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1000.5",
    "@angular-devkit/build-ng-packagr": "~0.1000.8",
    "@angular/cli": "~10.0.5",
    "@angular/compiler-cli": "~10.0.6",
    "@nguniversal/builders": "^10.0.2",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "husky": "^4.3.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~3.3.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.5.1",
    "ng-packagr": "^10.0.0",
    "prettier": "^2.2.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.9.5"
  }
}
